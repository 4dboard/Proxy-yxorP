{
  "name": "yxorp-next",
  "version": "0.12.2",
  "license": "MIT",
  "scripts": {
    "build": "npm run build-style && npm run build-components",
    "build-style": "lessc assets/app/css/style.less > assets/app/css/style.css -x",
    "build-components": "riot modules/Yxorp/assets/components modules/Yxorp/assets/components.js",
    "watch": "npm run watch-style & npm run watch-components",
    "watch-style": "watch-run -i -p 'assets/app/css/**/*.less' npm run build-style",
    "watch-components": "watch-run -i -p 'modules/Yxorp/assets/components/*.tag' npm run build-components",
    "docker-init": "docker build -t yxorp/dev .",
    "docker": "docker run -p 8080:80 -v $PWD:/var/www/html yxorp/dev & open http://localhost:8080/install"
  },
  "devDependencies": {
    "less": "^2.6.0",
    "riot-cli": "^3.0.0",
    "watch-run": "^1.2.4"
  },
  "dependencies": {
    "opencollective": "^1.0.3"
  },
  "collective": {
    "type": "opencollective",
    "url": "https://opencollective.com/yxorp",
    "logo": "https://opencollective.com/opencollective/logo.txt"
  }
}
